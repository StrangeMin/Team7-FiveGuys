<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="myPageViewModel" type="org.softeer.robocar.ui.viewmodel.MyPageViewModel"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent" android:layout_height="match_parent"
        android:background="@color/white">


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="72dp"
            android:textSize="@dimen/title_text"
            android:text="@{myPageViewModel.nickname}"
            android:textColor="@color/black"
            app:fontFamily="@font/pretendard_semibold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <View
            android:id="@+id/contentsTopDivider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/gray_700"
            android:layout_marginTop="16dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/nickname"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/modifyUserInformationButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingStart="32dp"
            android:paddingEnd="32dp"
            android:layout_marginTop="8dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:minHeight="0dp"
            android:textSize="@dimen/content_text"
            android:includeFontPadding="false"
            android:text="@string/modify_user_information"
            android:textColor="@color/black"
            android:background="?attr/selectableItemBackground"
            android:textAlignment="textStart"
            app:fontFamily="@font/pretendard_semibold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/contentsTopDivider"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/modifyUserInformationIconButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="32dp"
            android:textSize="@dimen/title_text"
            android:text="@string/modify_user_information"
            android:textColor="@color/black"
            android:src="@drawable/icon_arrow_right"
            app:fontFamily="@font/pretendard_semibold"
            app:layout_constraintTop_toTopOf="@id/modifyUserInformationButton"
            app:layout_constraintBottom_toBottomOf="@id/modifyUserInformationButton"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/modifyUserPasswordButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingStart="32dp"
            android:paddingEnd="32dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:minHeight="0dp"
            android:textSize="@dimen/content_text"
            android:includeFontPadding="false"
            android:text="@string/modify_user_password"
            android:textColor="@color/black"
            android:textAlignment="viewStart"
            android:background="?attr/selectableItemBackground"
            app:fontFamily="@font/pretendard_semibold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/modifyUserInformationButton"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/modifyUserPasswordIconButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="32dp"
            android:textSize="@dimen/title_text"
            android:text="@string/modify_user_information"
            android:textColor="@color/black"
            android:src="@drawable/icon_arrow_right"
            app:fontFamily="@font/pretendard_semibold"
            app:layout_constraintTop_toTopOf="@id/modifyUserPasswordButton"
            app:layout_constraintBottom_toBottomOf="@id/modifyUserPasswordButton"
            app:layout_constraintEnd_toEndOf="parent"/>

        <View
            android:id="@+id/contentsBottomDivider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/gray_700"
            android:layout_marginTop="8dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/modifyUserPasswordButton"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/withdrawalButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="8dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:includeFontPadding="false"
            android:textSize="12sp"
            android:text="@string/withdrawal"
            android:textColor="@color/gray_700"
            app:fontFamily="@font/pretendard_semibold"
            android:background="?attr/selectableItemBackground"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/contentsBottomDivider"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/logoutButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:includeFontPadding="false"
            android:textSize="12sp"
            android:text="@string/logout"
            android:textColor="@color/gray_700"
            android:background="?attr/selectableItemBackground"
            app:fontFamily="@font/pretendard_semibold"
            app:layout_constraintStart_toEndOf="@id/withdrawalButton"
            app:layout_constraintTop_toBottomOf="@id/contentsBottomDivider"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>